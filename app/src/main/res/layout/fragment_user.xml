<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_card"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:layout_marginBottom="260dp"
        app:srcCompat="@drawable/me"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/main_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_card"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Surname"
        style="@style/settingsName"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_name"
        app:layout_constraintBottom_toTopOf="@+id/textView_surname"
        app:layout_constraintStart_toStartOf="@+id/image_card"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Email: "
        style="@style/settingsStaticText"/>
    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_name"
        app:layout_constraintBottom_toTopOf="@+id/textView_surname"
        app:layout_constraintStart_toEndOf="@+id/a"
        android:layout_marginEnd="20dp"
        android:text="baufda@gmail.com"
        android:layout_marginTop="20dp"
        style="@style/settingsDinamicText"/>
    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_name"
        app:layout_constraintBottom_toTopOf="@+id/textView_mail"
        app:layout_constraintStart_toStartOf="@+id/image_card"
        android:layout_marginEnd="20dp"
        android:text="Телефон: "
        style="@style/settingsStaticText"/>
    <TextView
        android:id="@+id/textView_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_name"
        app:layout_constraintBottom_toTopOf="@+id/textView_mail"
        app:layout_constraintStart_toEndOf="@+id/b"
        android:layout_marginEnd="20dp"
        android:text="+375292368125"
        style="@style/settingsDinamicText"/>
    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_surname"
        app:layout_constraintStart_toStartOf="@+id/image_card"
        android:layout_marginEnd="20dp"
        android:text="Дата рождения: "
        style="@style/settingsStaticText"/>
    <TextView
        android:id="@+id/textView_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView_surname"
        app:layout_constraintStart_toEndOf="@+id/c"
        android:layout_marginEnd="20dp"
        android:text="08.09.2002"
        style="@style/settingsDinamicText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_change_language"
        android:layout_width="160dp"
        android:layout_height="40dp"
        style="@style/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_mail"
        android:layout_marginTop="20dp"
        android:text="Написать"
        android:background="@drawable/background_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>